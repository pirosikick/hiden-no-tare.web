{
  "name": "hiden-no-tare.web",
  "version": "0.0.1",
  "license": {
    "type": "MIT",
    "url": "http://pirosikick.mit-license.org/"
  },
  "devDependencies": {
    "babel": "^4.7.7",
    "babelify": "^5.0.4",
    "browser-sync": "^2.2.5",
    "browserify": "^9.0.3",
    "espower-babel": "^2.0.0",
    "mocha": "^2.2.1",
    "node-sass": "^2.1.1",
    "power-assert": "^0.10.2",
    "watchify": "^2.4.0"
  },
  "dependencies": {
    "lodash": "^3.5.0"
  },
  "scripts": {
    "test": "mocha --compilers js:espower-babel/guess",
    "watch": "npm run watch-js & npm run watch-css & npm run watch-test",
    "watch-test": "mocha -w --compilers js:espower-babel/guess",
    "watch-js": "mkdir -p .tmp/scripts && watchify src/client.js -o .tmp/scripts/client.bundle.js -v",
    "watch-css": "mkdir -p .tmp/styles && node-sass app/styles/ -o .tmp/styles/ --output-style nested -w --source-map-embed",
    "serve": "browser-sync start --config bs-config.js",
    "start": "npm run watch & npm run serve",
    "build": "npm run build-js && npm run build-css",
    "build-js": "mkdir -p build/scripts && browserify src/client.js -o build/scripts/client.bundle.js",
    "build-css": "mkdir -p build/styles && node-sass app/styles/ -o build/styles/ --output-style compressed"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "experimental": true
        }
      ]
    ]
  }
}
